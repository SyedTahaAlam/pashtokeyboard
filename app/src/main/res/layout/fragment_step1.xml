<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".Step1Frag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/keyboardicon"
            android:layout_gravity="center"

            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginTop="20dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="STEP 1"
                    android:fontFamily="@font/opensans"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#818181"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:fontFamily="@font/opensans"
                    android:gravity="center_horizontal"
                android:text="@string/step1_description"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#818181"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>
            <Button
                android:layout_width="250dp"
                android:layout_marginTop="25dp"
                android:textSize="15dp"
                android:fontFamily="@font/opensans"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:id="@+id/btn_step1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/enable_in_settings"
                android:background="@drawable/btn_enable_settting_layout"
                android:elevation="15dp"



                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout><!--<?xml version="1.0" encoding="utf-8"?>-->
