<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_view_adds"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/banner_ad_unit_id" />

    <com.umbrellaapps.urdu.keyboard.LatinKeyboardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c7c4c4"
        android:keyBackground="@drawable/theme_white"
        android:keyPreviewHeight="@dimen/dp64"
        android:keyPreviewLayout="@layout/popup"
        android:keyTextColor="#303030"
        android:paddingBottom="@dimen/dp5"
        android:paddingEnd="@dimen/dp6"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp6"
        android:paddingStart="@dimen/dp5"
        android:paddingTop="@dimen/dp5"

        android:shadowRadius="0.0" />

</LinearLayout>
